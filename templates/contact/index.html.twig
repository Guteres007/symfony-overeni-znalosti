{% extends 'base.html.twig' %}

{% block title %}Kontakty{% endblock %}

{% block body %}
    <h1>
        Kontakty
    </h1>
    {{ form(form) }}
    <table>
        <tr>
            <th>Firtname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
